<div class="jumbotron text-center">
    <div class="container">
        <div class="caption">
            <h1>New York Times</h1>
            <p>Mongo News Scraper</p>
        </div>
    </div>
</div>
<div class="container-fluid article-container">
    <div class="container">
        <h1>Latest News</h1>
        {{#each articles}}
        <div class="row border border-info" id={{this._id}} style="margin: 5px">
            <div class="col-md-4 picture">
                <img class="img-thumbnail" style="width: 210px; height:138.63px" src={{this.picture}}>
            </div>
            <div class="col-md-8 content">
                <a href="{{this.link}}" target="_blank"><h2>{{this.headline}}</h2></a>
                
                <p>{{this.summary}}</p>
                <p>{{this.author}}</p>

            
            </div>
        </div>
        {{/each}}
    </div>
</div>
