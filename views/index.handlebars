<div class="jumbotron text-center">
    <div class="container">
        <div class="caption">
            <h1>New York Times</h1>
            <p>Mongo News Scraper</p>
        </div>
    </div>
</div>
<div class="container-fluid article-container">
    <div class="container">
        <h1>Latest News</h1>
        {{#each articles}}
        <div class="row border border-info h-100" id={{this._id}} style="margin-bottom: 25px; background-color: rgb(255, 255, 255)">
            <div class="col-md-4 picture my-auto" style="text-align: center; vertical-align: middle">
                <img class="img-thumbnail" style="width: 250px; height:180.63px" src={{this.picture}}>
            </div>
            <div class="col-md-8 content" style="background-color:rgb(218, 215, 207)">
                <a href="{{this.link}}" target="_blank"><h2>{{this.headline}}</h2></a>
                
                <p>{{this.summary}}</p>
                <p>{{this.author}}</p>

            
            </div>
        </div>
        {{/each}}
    </div>
</div>
